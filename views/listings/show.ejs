<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-2 mt-3 show-card listing-card">
    <img src="<%= listing.image %>" class="card-img-top" alt="listing-image" />
    <div class="card-body">
      <p class="card-text">
        &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
      </p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
    </div>
  </div>
  <div class="btns mb-3 offset-1">
    <a
      href="/listings/<%= listing.id %>/edit"
      class="btn btn-dark add-btn col-1 offset-2"
      >Edit</a
    >

    <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
      <button class="btn btn-dark offset-2">Delete</button>
    </form>
  </div>

  <hr />

  <div class="col-8 offset-3">
    <h4>Leave a review</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          class="form-control"
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Valid Comment required!</div>
      </div>
      <button class="btn btn-outline-dark mb-3">Submit</button>
    </form>
    <hr />

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>

      <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title">Rishabh</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> Star</p>
        </div>
        <form class="mb-3" method="POST" action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE" >
            <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>

      <% } %>
    </div>
  </div>
</div>
